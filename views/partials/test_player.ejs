<div class="col-md-8 player">
	<div class="row album">
		<img src="/images/seoul.png" alt="앨범이미지"> 
	</div>
	<div class="row controller">
		<div class="col-md-3">
			<img src="/images/back.png">
			<button>back</button>
		</div>
		<div class="col-md-3">
			<img src="/images/play.png">
			<button>play</button>
		</div>
		<div class="col-md-3">
			<img src="images/advance.png">
			<button>next</button>
		</div>
	</div>
</div>

<script>
function sendAjax(url, control){
	// 입력값을 변수에 담고 문자열 형태로 변환
	var msg = {'controller' : control};
	msg = JSON.stringify(msg);

	// content-type을 설정하고 데이터 송신
	var xhr = new XMLHttpRequest();
	xhr.open('POST', url);
	xhr.setRequestHeader('Content-type', "application/json");
	xhr.send(msg);
	
	// 데이터 수신이 완료되면 표시
	xhr.addEventListener('load', function(){
		console.log(xhr.responseText);
	});
}
var x = document.querySelectorAll("button");
for(var i = 0; i < 3; i++) {
	// x[i].setAttribute("id",i+"");
	x[i].addEventListener('click', function(){
		console.log("click");
		// sendAjax 함수를 만들고 URL과 data를 전달
		sendAjax('http://localhost:8081/change2', this.innerText);
	});
}
</script>
